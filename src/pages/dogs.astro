---
import HeaderButton from '../components/HeaderButton.astro';
import Layout from '../layouts/Layout.astro';
import Dog from '../components/Dog';
---

<Layout title='Dogs'>
  <main class='py-8 px-4 mx-auto max-w-xl lg:py-16 lg:px-6'>
    <div class='mx-auto text-center mb-8 lg:mb-16'>
      <h2 class='text-4xl font-bold'>Dogsssss 🐶</h2>
    </div>
    <nav
      class='flex flex-row items-center justify-center gap-6 md:gap-12 w-full text-center'
    >
      <HeaderButton href='/'>⬅️ I changed my opinion</HeaderButton>
    </nav>
    <Dog client:only />
  </main>
</Layout>
